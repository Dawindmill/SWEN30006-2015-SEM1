<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<style type="text/css">
td, th
{
    padding:0 0 0 15px;
}
</style>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Img url</th>
      <th>Category</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.img_url %></td>
        <td><%= post.category ? post.category.title : "No Category" %></td>
        <td><%= post.author ? post.author.name : "No Author" %></td>
        <td><%= post.anthology ? post.anthology.title : "No Anthology" %></td>

        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
